extends layout.jade
//-Declaring item mixin
mixin overview-item(att,val)
	li.item= att + " : " +  val
	
mixin snapshot-item(att,val)
	li.item= att + " : " +  val
	
mixin details-item(att,val)
	li.item= att + " : " +  val
		
block content
	div(id="title") Profile
	div(id="profile-container")
		div(class="profile-section" id="overview")
			div(class="section-title") Overview
			ul
				+overview-item("Name",profile.name)
				+overview-item("Name",profile.company)
				+overview-item("Name",profile.location)
			
		div(class="profile-section" id="snapshot")
			div(class="section-title") Snapshot
			ul
				+snapshot-item("Github repos",profile.repo-count)
				+snapshot-item("Github commits",profile.commit-count)
				+snapshot-item("Languages",profile.repo-count)
					ul
						for lang in profile.languages
							li=lang
		
		div(class="profile-section" id="details")
			div(class="section-title") Details
			ul
				+details-item("Bio",profile.bio)